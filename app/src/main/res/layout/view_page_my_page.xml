            <!--优惠券-->
            <RelativeLayout
                android:id="@+id/rl_home_my_page_mid_coupon"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_my_page_mid_coupon"
                    android:text="优惠券"
                    style="@style/my_page_mid_integral_style"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="0 张"
                    style="@style/my_page_mid_integral_style"/>
            </RelativeLayout>
            <!--设置-->
            <RelativeLayout
                android:id="@+id/rl_home_my_page_mid_setting"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_my_page_mid_setting"
                    android:text="设  置"
                    style="@style/my_page_mid_integral_style"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_right"
                    style="@style/my_page_mid_integral_style"/>
            </RelativeLayout>
            <!--客服-->
            <RelativeLayout
                android:id="@+id/rl_home_my_page_mid_kefu"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_my_page_mid_kefu"
                    android:text="客  服"
                    style="@style/my_page_mid_integral_style"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_right"
                    style="@style/my_page_mid_integral_style"/>
            </RelativeLayout>
            <!--推荐码-->
            <RelativeLayout
                android:id="@+id/rl_my_page_mid_referral_code"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_my_page_mid_referral_code"
                    android:text="推荐码"
                    style="@style/my_page_mid_integral_style"/>
