                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_right"
                    style="@style/my_page_mid_integral_style"/>
            </RelativeLayout>
            <!--收货地址-->
            <RelativeLayout
                android:id="@+id/rl_my_page_mid_shipping_address"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/location"
                    android:text="收货地址"
                    style="@style/my_page_mid_integral_style"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_right"
                    style="@style/my_page_mid_integral_style"/>
            </RelativeLayout>
            <!--商家入驻-->
            <RelativeLayout
                android:id="@+id/rl_my_page_mid_recruitment"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/recruitment"
                    android:text="商家入驻"
                    style="@style/my_page_mid_integral_style"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_right"
                    style="@style/my_page_mid_integral_style"/>
            </RelativeLayout>
        </LinearLayout>

        <!--我的好友-->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <!--我的好友-->
            <LinearLayout
                android:id="@+id/ll_my_page_bottom_my_friends"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_my_page_bottom_my_friends"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的好友"
                    android:textSize="14dp"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <!--我的收藏-->
            <LinearLayout
                android:id="@+id/ll_my_page_bottom_my_collection"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_my_page_bottom_my_collection"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textSize="14dp"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <!--我的钱包-->
            <LinearLayout
                android:id="@+id/ll_my_page_bottom_my_money_package"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_my_page_bottom_my_money_packge"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textSize="14dp"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <!--我的订单-->
            <LinearLayout
                android:id="@+id/ll_my_page_bottom_my_cargo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_my_page_bottom_my_cargo"/>
