<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:textSize="14sp"
        android:text="确定"/>
    <DatePicker
        android:id="@+id/my_date_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_confirm"
        android:calendarViewShown="false"
        android:visibility="gone"
        android:datePickerMode="spinner"
        android:layout_alignParentBottom="true"></DatePicker>
    <com.wx.wheelview.widget.WheelView
        android:id="@+id/my_wheel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_confirm"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@null"
        app:lineColor="@android:color/holo_blue_dark"
        app:lineHeight="1dp"
        app:maskHeight="12dp"
        app:noEmpty="true"
        app:normalTextColor="@android:color/holo_green_light"
        app:normalTextSize="12sp"
        app:selectedTextColor="@android:color/holo_orange_dark"
        app:selectedTextSize="16sp"
        app:unitHeight="28dp"/>


</RelativeLayout>