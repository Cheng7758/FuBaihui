<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_search_bar"
        android:paddingRight="27dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="#ededed">

        <EditText
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/et_social_search_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/em_seabar_input"
            android:drawableLeft="@drawable/em_search_bar_icon_normal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="昵称/关键字"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:singleLine="true"
            />

        <ImageButton
            android:id="@+id/ib_social_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:src="@drawable/ease_search_clear"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_social_search_sex"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="性别"
            android:textSize="16sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_social_search_sex"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:text="女"
            android:textSize="16sp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/iv_enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CBCBCB"/>
    <LinearLayout
        android:id="@+id/ll_social_search_age"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="年龄"
            android:textSize="16sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_social_search_age"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:text="18-22岁"
            android:textSize="16sp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/iv_enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CBCBCB"/>
    <Button
        android:id="@+id/btn_social_search"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_register_selected"
        android:text="查找"
        android:textSize="18sp"/>
</LinearLayout>