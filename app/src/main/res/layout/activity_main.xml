<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.zhanghao.woaisiji.viewpage.NoScrollViewPager
        android:id="@+id/vp_main_switch_function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_shouye"
        android:fadingEdgeLength="0dp"/>
    <!--底部菜单-->
    <RadioGroup
        android:layout_alignParentBottom="true"
        android:id="@+id/rg_shouye"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home_page"
            style="@style/BottomTabStyle"
            android:checked="true"
            android:drawableTop="@drawable/selector_bottom_tab_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_driver_dynamic"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/selevtor_bottom_tab_sijiquan"
            android:text="商城点评" />

        <RadioButton
            android:id="@+id/rb_shopping_car"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/selector_bottom_tab_gouwuche"
            android:text="购物车" />

        <RadioButton
            android:id="@+id/rb_personal_setting"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/selevtor_bottom_tab_geren"
            android:text="我的" />
    </RadioGroup>
</RelativeLayout>




