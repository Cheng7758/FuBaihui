<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#F2EFFA"
    tools:context="com.example.zhanghao.woaisiji.activity.PaymentMethodActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF5000">

        <ImageView
            android:id="@+id/iv_register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:background="@drawable/em_mm_title_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="确认支付"
            android:textColor="#FCFDF5"
            android:textSize="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">
        <TextView
            android:text="订单编号:"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:id="@+id/textView7" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:id="@+id/zhifu_number" />
        <TextView
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:id="@+id/zhifu_Price"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/zhifu_number"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textSize="18dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"/>
    <RelativeLayout
        android:focusable="true"
        android:onClick="onClick"
        android:clickable="true"
        android:id="@+id/zhifu_zhifubao"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zhifubao"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imageView4"
            android:layout_alignParentLeft="true" />
        <TextView
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView4"
            android:id="@+id/textView8"
            android:layout_toRightOf="@+id/imageView4" />
        <ImageView
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/zhifu_zhifubaoSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baiquan"
            android:layout_marginEnd="31dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="31dp" />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"/>
    <RelativeLayout
        android:focusable="true"
        android:onClick="onClick"
        android:clickable="true"
        android:id="@+id/zhifu_weixinzhifu"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView android:focusable="false"
            android:clickable="false"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixinzhifu"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/imageView5"
            android:layout_alignParentLeft="true" />
        <TextView
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView5"
            android:id="@+id/textView10"
            android:layout_toRightOf="@+id/imageView5" />
        <ImageView
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/zhifu_weixinSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baiquan"
            android:layout_marginEnd="34dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="34dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际付款:"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView11" />
        <TextView
            android:id="@+id/zhifu_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="0.00"
            android:layout_alignTop="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />
    </RelativeLayout>
    <RelativeLayout
        android:focusable="true"
        android:onClick="onClick"
        android:clickable="true"
        android:id="@+id/ConfirmPayment"
        android:layout_margin="20dp"
        android:background="#FF5000"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:focusable="false"
            android:clickable="false"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认支付"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
